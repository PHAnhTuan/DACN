@{
    ViewBag.Title = "Liên Hệ";
}


<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">

                <div class="row row-mt-15em">
                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Khách sạn của những trải nghiệm và không gian tuyệt vời !</a></span>
                        <h1 class="cursive-font">Xin chào!</h1>
                    </div>

                </div>

            </div>
        </div>
    </div>
</header>


<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6 animate-box">
                    <h2>Chúng tôi có thể giúp gì cho bạn?</h2>
                    <h3>Liên hệ với bộ phận Dịch Vụ Khách Hàng của chúng tôi.</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        QLKS.Models.tblKhachHang kh = (QLKS.Models.tblKhachHang)Session["KH"];
                        if (kh == null)
                        {
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="name">Name</label>
                                    @*<input type="text" id="name" class="form-control" placeholder="Your firstname">*@
                                    @Html.TextBox("ho_ten", null, new { @class = "form-control", placeholder = "Họ tên của bạn" })
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="email">Email</label>
                                    @*<input type="text" id="email" class="form-control" placeholder="Your email address">*@
                                    @Html.TextBox("mail", null, new { @class = "form-control", placeholder = "Email của bạn" })
                                </div>
                            </div>
                        }

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Message</label>
                                @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Write us something"></textarea>*@
                                @Html.TextArea("noi_dung", null, new { @class = "form-control", placeholder = "Hãy chia sẽ lo lắng của bạn", cols = "30", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input onclick="return checkSMS()" type="submit" value="Gửi" class="btn btn-primary">
                        </div>
                        
                    }
                </div>
                
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Thông tin liên hệ</h3>
                        <ul>
                            <li class="address">175/76A Hà Tôn Quyền Phường 4 Quận 11 <br> Thành phố Hồ Chí Minh.</li><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.7000439516282!2d106.64994237491837!3d10.757584859541241!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752e8d35ab848d%3A0x4683631dc5dfc13f!2zMTc1Lzc2QSDEkC4gSMOgIFTDtG4gUXV54buBbiwgUGjGsOG7nW5nIDQsIFF14bqtbiAxMSwgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1700829456530!5m2!1svi!2s" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            <li class="phone"><a href="tel://0706670625">0706670625</a></li>
                            <li class="email"><a href="https://mail.google.com/mail/u/0/#inbox">tuanbule70@gmail.com</a></li>
                         
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function checkSMS() {
        var ht = $('#ho_ten');
        var mail = $('#mail');
        if (ht != null)
            if (ht.val() == "") {
                alert('Phải nhập họ tên !');
                return false;
            }
        if (mail != null)
            if (mail.val() == "") {
                alert('Phải nhập email !');
                return false;
            }
        var nd = $('#noi_dung').val();
        if (nd.length < 10) {
            alert('Nội dung quá ngắn !');
            return false;
        } else if (nd.length >= 500) {
            alert('Nội dung quá dài !');
            return false;
        }
        return true;
    }
</script>